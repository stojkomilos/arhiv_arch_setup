export ZDOTDIR=$HOME/.config/zsh

# Additions to PATH variable
export PATH=~/.scripts:$PATH
export PATH=~/.local/bin:$PATH

export DICPATH=/usr/share/dict/hunspell-custom

# Disables the useless "less" command history file that is usualy put in the home directory
export LESSHISTFILE="-"

# Enables firefox on wayland
export MOZ_ENABLE_WAYLAND=1

# Preferences - environment variables
export EDITOR="nvim"
export VISUAL="nvim"
export TERMINAL="alacritty"
export BROWSER="brave"
export FILE_BROWSER="pcmanfm"
export MY_SYNC_REMOTE="db" # Personal
